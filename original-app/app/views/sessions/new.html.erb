<h1>Log in</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(:session, url: login_path) do |f| %>
            
            
                <p>
                    <%= f.label :emai,'メールアドレス' %>
                    <%= f.email_field :email %>
                </p>
                <p>
                    <%= f.label :password,'パスワード' %>
                    <%= f.password_field :password %>
                </p>
                
                <%= f.submit 'Log in' %>
            <% end %>
            <p>New user? <%=link_to "Sign up now!",signup_path %></p>
        </div>
    </div>
</div>
