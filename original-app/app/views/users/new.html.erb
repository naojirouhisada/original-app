<h1>Sign up!</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_for(@user) do |f| %>
                <p>
                    <%= f.label :first_kanji, '漢字(姓)' %>
                    <%= f.text_field :first_kanji %>
                    <%= f.label :last_kanji,'漢字(名)' %>
                    <%= f.text_field :last_kanji %>
                </p>
                <p>
                    <%= f.label :first_kanamoji, 'カナ(姓)' %>
                    <%= f.text_field :first_kanamoji %>
                    <%= f.label :last_kanamoji,'カナ(名)' %>
                    <%= f.text_field :last_kanamoji %>
                </p>
                <p>
                    <%= f.label :first_name,'ローマ字(姓)' %>
                    <%= f.text_field :first_name %>
                    <%= f.label :last_name,'ローマ字(名)' %>
                    
                </p>
                <p>
                    <%= f.label :high_school,'高校' %>
                    
                </p>
                <p>
                    <%= f.label :university,'大学' %>
                  
                </p>
                <p>
                    <%= f.label :work_for,'勤務先' %>
                    
                </p>
            <% end %>
        </div>
    </div>
</div>
