
<% if current_user != @user %>
    <div id="follow_form">

        <% if current_user.following?(@user) ||  current_user.follower?(@user) && @follower_relationships.status == "allow"  %>
           

            <%= render 'unfollow' %>

        <% else %>

            <%= render 'follow' %>
   
        <% end %>
    </div>
<% end  %>

